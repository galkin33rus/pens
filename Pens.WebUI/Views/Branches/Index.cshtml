@model IEnumerable<Pens.Domain.Entities.Branch>

@{
    ViewBag.Title = "Отделения";
}
<div class="page-header">
    <h2>Отделения</h2>
</div>


<div class="container">
   
    <div class="row">
        <p>  @Html.ActionLink("Добавить отделение", "Edit", null, new { @class = "btn btn-success" }) </p>
    </div>   
    <div class="row">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-center" style="width:50px;">ID</th>
                <th class="text-center">Наименование</th>
                <th class="text-center" style="width:300px;">Действие</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@item.BranchID</td>
                    <td class="text-left">@item.Title</td>
                    <td class="text-center">@Html.ActionLink("Редактировать", "Edit", new { item.BranchID }, new { @class = "btn btn-info" }) @Html.ActionLink("Удалить", "Delete", new { item.BranchID }, new { @class = "btn btn-warning" }) </td>
                </tr>
            }
        </table>
    </div>

</div>

