@model Pens.Domain.Entities.Users

@{
    ViewBag.Title = "Пользователи";
}

    <div class="page-header">
        <h2>Удалить пользователя</h2>
    </div>

    <h3>Вы действительно хотите удалить пользователя?</h3>
    <div>       
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name):
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.Login):
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Login)
            </dd>
        
            <dt>
                @Html.DisplayNameFor(model => model.Position):
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Position)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.BranchId):
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Branch.Title)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.RoleId):
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Roles.Name)
            </dd>
    
        </dl>
    
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Удалить" class="btn btn-success" />
                    @Html.ActionLink("Вернуться к списку", "Index", null, new
                                    {
                                        @class = "btn btn-link"
                                    })
                </div>
            </div>           
        }

        <div class="text-danger">
            @ViewBag.Message
        </div>
    </div>
