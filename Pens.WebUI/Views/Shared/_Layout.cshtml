<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Пенсионеры</title>  
            
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-3.2.1.js"></script>
    <script src="~/Scripts/jquery.pickmeup.js"></script>
    <script src="~/Scripts/jquery.pickmeup.twitter-bootstrap.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

    <link href="~/Content/sticky-footer.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Пенсионеры", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Журнал", "Index", "Register", new { area = "" }, new { @class = "navbar-nav" })</li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Прайс", "Index", "Price", new { area = "" }, new { @class = "navbar-nav" })</li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Пациенты", "Index", "Pacients", new { area = "" }, new { @class = "navbar-nav" })</li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("МКБ-10", "Index", "MKB", new { area = "" }, new { @class = "navbar-nav" })</li>
                    </ul>
                    @if (User.IsInRole("Administrators"))
                    {                        
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Отчеты", "Index", "Reports", new { area = "" }, new { @class = "navbar-nav" })</li>
                        </ul>
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Отделения", "Index", "Branches", new { area = "" }, new { @class = "navbar-nav" })</li>
                        </ul>
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Пользователи", "Index", "Users", new { area = "" }, new { @class = "navbar-nav" })</li>
                        </ul>
                    }
                    

                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@LoginHelper.UserName(ViewContext.HttpContext.User.Identity.Name)<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Выйти", "LogOff", "Account")</li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>        
    </div>

    <div class="container body-content">
        @RenderBody()
        
    </div>
        
    <script type="text/javascript">
        $(function () {
            $(".data-input").pickmeup_twitter_bootstrap({
                first_day: 1,
                format: 'd.m.Y',
                hide_on_select: true,
                locale: {
                days: ["Воскресенье", "Понедельник", "Вторник", "Среда", "Четверг", "Пятница", "Суббота"],
                daysShort: ["Вск", "Пнд", "Втр", "Срд", "Чтв", "Птн", "Суб"],
                daysMin: ["Вс", "Пн", "Вт", "Ср", "Чт", "Пт", "Сб"],
                months: ["Январь", "Февраль", "Март", "Апрель", "Май", "Июнь", "Июль", "Август", "Сентябрь", "Октябрь", "Ноябрь", "Декабрь"],
                monthsShort: ["Янв", "Фев", "Мар", "Апр", "Май", "Июн", "Июл", "Авг", "Сен", "Окт", "Ноя", "Дек"],
            }
            });
        });
    </script>
</body>
</html>